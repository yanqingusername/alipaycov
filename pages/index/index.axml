        <view class="bottom_view_1" catchTap="bindCoupon">
          <image class="bottom_view_1_img" src="../../images/icon_08_26_01.png"></image>
          <view class="bottom_view_1_text">我的卡券</view>
        </view>
      </view>

      <view class="empty_view"></view>

