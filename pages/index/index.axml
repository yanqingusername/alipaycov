<!-- 公告 -->
      <view style="margin: 30rpx 30rpx 0rpx 30rpx;" a:if="{{noticeList.length > 0}}">
         <view class="notice_view1" >
        <swiper class="swiper_zi" vertical="true" autoplay="true" circular="true" interval="3000">
            <block a:for="{{noticeList}}" a:key="index">
             <!-- catchtouchmove='catchTouchMove' -->
            <swiper-item>
                <view class="notice_left" data-item="{{item}}" >
                  <image class="notice_left_img" src="../../images/icon_0701_11.png"></image>
                  <view class="notice_left_title">{{item.headtext}}<text class="notice_left_text" a:if="{{item.text}}">“{{item.text}}”</text>{{item.tailtext}}</view>
                </view>
            </swiper-item>
            </block>
        </swiper>
         </view>
      </view>

      <view class="main_bottom">常用服务</view>

      <view class="main_bottom_view">
        <view class="bottom_view_1" catchTap="bindAppointment">
          <image class="bottom_view_1_img" src="../../images/icon_0701_12.png"></image>
          <view class="bottom_view_1_text">查询报告</view>

        </view>
        <view class="bottom_view_1" catchTap="bindEpidemicPreventionPolicy">
          <image class="bottom_view_1_img" src="../../images/icon_0701_13.png"></image>
          <view class="bottom_view_1_text">防疫政策</view>
        </view>
        <!-- <view class="bottom_view_1" catchTap="bindXinguanSelfInspection">
